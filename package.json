{
  "name": "total-recall-memory",
  "version": "0.8.0",
  "description": "Persistent cross-session memory for Claude Code and Codex. Automatically stores decisions, patterns, and lessons learned in a semantic search index so every session starts with full context. Supports multi-machine sharing via HTTP server with web UI.",
  "bin": {
    "total-recall": "scripts/total-recall"
  },
  "scripts": {
    "postinstall": "chmod +x ./scripts/total-recall ./scripts/ingest_sessions.py ./scripts/total-recall-server 2>/dev/null || true"
  },
  "keywords": [
    "claude",
    "claude-code",
    "codex",
    "memory",
    "knowledge",
    "semantic-search",
    "sessions",
    "qmd",
    "multi-machine",
    "cross-session",
    "persistence",
    "ai",
    "llm"
  ],
  "author": "Radu Lupu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radu2lupu/total-recall.git"
  },
  "homepage": "https://github.com/radu2lupu/total-recall",
  "bugs": {
    "url": "https://github.com/radu2lupu/total-recall/issues"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": ">=16"
  },
  "files": [
    "scripts/",
    "hooks/",
    "commands/",
    ".claude-plugin/",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
